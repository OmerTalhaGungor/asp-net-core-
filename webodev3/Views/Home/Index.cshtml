@model List<Kayit>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Mevcut Üye Listesi</h2>
<a asp-action="Ekle" class="btn btn-primary text-white my-2">Ekle</a> 
<table class="table table-head-bg-success table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Tip</td>
            <td>@item.MarkaAdi</td>
            <td>@item.Fiyat</td>
            <td>@item.Aciklama</td>
            <td>
                <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-primary">Güncelle</a>
                <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>